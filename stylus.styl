// header Log In 
header
    color white
    background: red
    fixed top left
    width 100%
    height 70px
    z-index: z.header
    padding 20px
    clearfix()
    shadow-level(2)
    h1
        margin 0
        float left
        font-size 1.6em

    .login-buttons-dropdown-align-
        float right
        border 2px solid white
        padding 7px 0px
        &:hover
            background: white
            trans()
            shadow-level(1)
            

        a
            color white
            text-decoration none

        #login-sign-in-link
            text-decoration none
            font-size 1.2em
            color white
            padding 7px 15px
            &:hover
                trans()
                color red
                
            

        #login-buttons a, .accounts-dialog a
            text-decoration none
            color black

        #login-dropdown-list
            right 0
            left auto

        #forgot-password-link, #signup-link
            color darkgrey
            text-decoration none
            margin-top 15px
            &:hover
                color: red

        
            
    #login-buttons a
        color darkgrey
        text-decoration none
        font-size 11px
        &:hover
            color red
            border-color @background

    .accounts-dialog
        background: white
        border 2px solid red
        shadow-level(3)

    #login-email-label, #login-password-label
        color red

    

    #login-buttons .login-button, .accounts-dialog .login-button
        color white
        background: red
        margin 20px auto 0
        text-transform uppercase
        &:hover
            background @background - 20
            border-color @background
            shadow-level(2)

    #login-name-link
        color white

//Ends Header Log in

// Side navigation
.side-nav
    fixed bottom left
    height 100px
    width 100%
    overflow hidden
    background red
    color white
    z-index: z.header
    shadow-level(2)
    ul
        margin 0
        padding 0
        display flex
        justify-content space-between
        list-style none
    a
        color white
        text-decoration none
        padding 20px 20px
        display block
        text-align center
        trans()
        &:hover, &.active
            background white
            color red
    i
        display block
        font-size 2em
        margin-bottom 10px
    +above($med)
        height 100%
        z-index: z.mid
        padding 120px 0
        fixed top left
        width $side-nav
        ul
            display block
        shadow-level(-1)
        a
            padding 20px 10px
            &:hover, &.active
                border-left 4px solid teal
    +above($large)
        width $side-nav-large
        a
            padding 20px 20px
            &:hover, &.active
                border-left 10px solid lightblue
//End Side Nav

.main-layout
    lost-center 90%
    margin-top 20px
    +above($med)
